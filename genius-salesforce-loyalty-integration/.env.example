# Server Configuration
PORT=3000
NODE_ENV=development

# Genius POS Configuration
GENIUS_API_BASE_URL=https://api.xenial.com/v1
GENIUS_API_KEY=your_genius_api_key_here
GENIUS_STORE_ID=your_store_id_here
GENIUS_TERMINAL_ID=your_terminal_id_here

# Salesforce Configuration
SALESFORCE_LOGIN_URL=https://login.salesforce.com
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=your_salesforce_password
SALESFORCE_SECURITY_TOKEN=your_security_token
SALESFORCE_CLIENT_ID=your_connected_app_client_id
SALESFORCE_CLIENT_SECRET=your_connected_app_client_secret

# Salesforce Loyalty Program Configuration
SALESFORCE_LOYALTY_PROGRAM_NAME=Whataburger Rewards
SALESFORCE_CURRENCY_ISO_CODE=USD

# Redis Configuration (for queue management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Integration Settings
SYNC_INTERVAL_MINUTES=5
ENABLE_REAL_TIME_SYNC=true
RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/integration.log

# Points Configuration
POINTS_PER_DOLLAR=10
MINIMUM_TRANSACTION_FOR_POINTS=1.00
