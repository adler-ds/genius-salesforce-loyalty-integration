{
  "apps": [
    {
      "name": "genius-loyalty-integration",
      "script": "dist/index.js",
      "instances": 2,
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production"
      },
      "error_file": "./logs/pm2-error.log",
      "out_file": "./logs/pm2-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "500M",
      "merge_logs": true,
      "kill_timeout": 5000
    }
  ]
}
