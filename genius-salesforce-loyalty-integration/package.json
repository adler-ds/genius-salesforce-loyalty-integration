{
  "name": "genius-salesforce-loyalty-integration",
  "version": "1.0.0",
  "description": "Integration service connecting Xenial Genius POS to Salesforce Loyalty Management",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "heroku-postbuild": "npm run build",
    "postinstall": "npm run build",
    "test": "jest",
    "lint": "eslint . --ext .ts"
  },
  "engines": {
    "node": "18.x",
    "npm": ">=9.0.0"
  },
  "cacheDirectories": [
    "node_modules"
  ],
  "keywords": [
    "genius-pos",
    "salesforce-loyalty",
    "pos-integration",
    "loyalty-management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.7",
    "dotenv": "^16.4.1",
    "jsforce": "^2.0.0-beta.29",
    "winston": "^3.11.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "bull": "^4.12.0",
    "ioredis": "^5.3.2",
    "joi": "^17.12.1",
    "date-fns": "^3.3.1",
    "typescript": "^5.3.3",
    "@types/node": "^20.11.16"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bull": "^4.10.0",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.2"
  },
  "dependencies-dev-note": "TypeScript is in dependencies (not devDependencies) for Heroku build",
  "heroku-run-build-script": true
}
